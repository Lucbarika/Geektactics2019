  <div class="this-course-title">
    <h1> <%= @course.code.capitalize %> - <%= @course.title.capitalize %></h1>
  </div>
<div class="this-course-container">
  <div class="this-course-details">
    <div class="this-course-team">
      <p><strong>Team :</strong>
        <% @team.each do |member| %>
          <%= member %>
        <% end %>
      </p>
    </div>
    <div class="this-course-description">
      <p> <strong>Course description: </strong><%= @course.description %> </p>
    </div>
    <div class="this-course-category">
      <p> Category: <%= @course.category %> </p>
    </div>
    </div>
  <div class="index-tool-container">
    <% @tools.each do |tool| %>
      <div class="tool-card">
        <%= link_to tool_path(tool) do %>
        <div class="tool-card-title">
          <h5><%= tool.name %></h5>
        </div>
        <div class="tool-card-content">
          <p><%= tool.description %></p>
        </div>
        <div class="tool-card-footer">
          <div class="tool-pdf">
            <i class="fas fa-file-pdf"></i> <%= tool.pdf_url %>
          </div>
          <div class="video-pdf">
            <i class="fas fa-video"></i> <%= tool.video_url %>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
<div id="new-tool">
  <strong>Add a tool to tis course</strong>
  <%= render 'tools/form', course: @course, tool: @tool %>
</div>
<div class="index-course-feedbacks-container">
  <strong>Add a feedback</strong>
  <div id="form-new-course-feedback">
  <%= render 'course_feedbacks/form', course: @course, course_feedback: @course_feedback %>
  </div>
  <div id="all-review-button">
    <p><strong>See all the reviews</strong>
  </div>
  <div class="all-reviews-display hidden">
  <div id="new-course-feedback">

  </div>
      <% @course_feedbacks.each_with_index do |course_feedback, index| %>
      <div class="feedback-number">
        <p><strong>Feedback nÂ°<%=index + 1 %></strong></p>
      </div>
      <div class="feedback-author">
        <p><strong>From: </strong><%= course_feedback.user.first_name %> <%= course_feedback.user.last_name %></p>
      </div>
      <div class="feedback-content">
        <p> <%= course_feedback.content %> </p>
      </div>
      <div class="update-feedback">
        <%= link_to edit_course_course_feedback_path(course_feedback) do %>
          Update feedback
        <% end %>
      </div>
      <div class="delete-feedback">
        <%= link_to "Delete feedback", root_path, method: :delete %>
      </div>
      <% end %>
  </div>


