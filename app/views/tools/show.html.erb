<div class="tool-show-container">
  <div class="tool-name">
    <h1><%=@tool.course.title.capitalize%> - <%=@tool.name.capitalize%></h1>
  </div>
  <div class="tool-details-container">
    <div class="tool-description">
      <p><strong>Category: </strong> <%=@tool.course.category.capitalize%></p>
      <br>
      <br>
      <p><strong>Description: </strong> <%= @tool.description %></p>
    </div>
    <div class="support-container">
    <div id="tool-video">
      <h4>Video: </h4>
      <div class="tools-video">
        <iframe width="649" height="365" src="<%= @tool.video_url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
    </div>
    <div class="tool-pdf">
      <h4>PDF: </h4>
      <p>Download Course PDF: </p>
      <p class="fas fa-file-pdf"></p>
       <%= @tool.pdf_url %>
    </div>
    </div>
  </div>
