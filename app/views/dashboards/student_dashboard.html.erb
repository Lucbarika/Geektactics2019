<div class="student-dashboard-container">
  <div class="dashboard-title">
    Your student dashboard
  </div>
  <div class="contain-container">
    <div class="avatar-div avatar-large">
      <%= image_tag "default_user.jpg", height: 300 %>
    </div>
<div class="infos-container">
  <div id="student_name" class="name-cell-style">
    <%= @student.first_name %>
    <%= @student.last_name %>
  </div>


<div class="biographie-cell-style">
  <%= @student.biographie %>
</div>
<div class="student-course-container">
  <h5><strong>Your courses: </strong></h5>
  <% @student_courses.each do |course| %>
  <div id="student-courses">
    <p><strong><%= course.title %></strong> dÃ©tails</p>
    <% course.tools.each do |tool| %>
      <div id="student-course-tool">
      <p> <%= tool.name %></p>
      <% end %>
      </div>
    <% end %>
  </div>
  <div id="add-course">
    <a href="">add a course</a>
  </div>
</div>

<div id="student-purchases">
  <strong>Your purchases</strong>
  <% @purchases.each do |purchase| %>
    <%=purchase.tool.name%>
  <%end%>
</div>
